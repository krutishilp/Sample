	<beans:bean id="jdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate">
		<beans:constructor-arg name="dataSource"
			ref="dataSource"></beans:constructor-arg>
	</beans:bean>
	<beans:bean id="namedJdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate">
		<beans:constructor-arg name="dataSource"
			ref="dataSource"></beans:constructor-arg>
	</beans:bean>
	<beans:bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<beans:property name="driverClassName"
			value="com.mysql.jdbc.Driver"></beans:property>
		<beans:property name="url"
			value="jdbc:mysql://localhost:3306/javafs"></beans:property>
		<beans:property name="username" value="root"></beans:property>
		<beans:property name="password" value="root"></beans:property>
	</beans:bean>
